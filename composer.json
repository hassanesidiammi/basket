{
    "name": "acme/console-widget-basket",
    "description": "Console Basket App for Acme Widget Co.",
    "type": "project",
    "require": {
      "php": "^8.1"
    },
    "require-dev": {
      "phpunit/phpunit": "^10.0",
      "phpstan/phpstan": "^1.10",
      "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
      "psr-4": {
        "App\\": "src/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "Tests\\": "tests/"
      }
    },
    "scripts": {
      "test": "phpunit",
      "phpstan": "phpstan analyse src --level=max",
      "cs": "phpcs src --standard=PSR12",
      "cs-fix": "phpcbf src --standard=PSR12"
    },
    "minimum-stability": "stable",
    "license": "MIT"
  }
  